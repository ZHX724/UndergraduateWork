<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.demo.blockchaintracksystem.mapper.ProductMapper">

    <resultMap id="ProductMap" type="org.demo.blockchaintracksystem.entity.Product">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" parameterType="org.demo.blockchaintracksystem.entity.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (user_id, name, description, created_at)
        VALUES (#{userId}, #{name}, #{description}, NOW())
    </insert>

    <select id="selectByUserId" resultMap="ProductMap">
        SELECT id, user_id, name, description, created_at
        FROM product
        WHERE user_id = #{userId}
        ORDER BY id DESC
    </select>

    <select id="selectById" resultMap="ProductMap">
        SELECT id, user_id, name, description, created_at
        FROM product
        WHERE id = #{id}
        LIMIT 1
    </select>

    <delete id="deleteByIdAndUserId">
        DELETE FROM product
        WHERE id = #{productId} AND user_id = #{userId}
    </delete>


</mapper>
